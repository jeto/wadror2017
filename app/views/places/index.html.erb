<h1>Beer places search</h1>
<p id="notice"><%= notice %></p>

<%= form_tag places_path do %>
  city <%= text_field_tag :city, params[:city] %>
  <%= submit_tag "Search" %>
<% end %>

<% if @places %>
  <table>
    <thead>
        <td>Name</td>
        <td>Type</td>
        <td>Address</td>
        <td>Rating</td>
    </thead>
    <% @places.each do |place| %>
      <tr>  
        <td><%= link_to place.name, place_path(place.id) %></td>
        <td><%= place.status %></td>
        <td><%= place.street %>, <%= place.city %>, <%= place.country %></td>
        <td><%= place.overall %></td>
      </tr>
    <% end %>
  </table>
<% end %>