<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th>Favorite beer</th>
      <th>Prefered style</th>
      <th>Favorite brewery</th>
      <th>Ratings</th>
    </tr>
  </thead>

  <tbody>
    <% user.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= link_to_if user.favorite_beer, user.favorite_beer %></td>
        <td><%= user.favorite_style %></td>
        <td><%= link_to_if user.favorite_brewery, user.favorite_brewery %></td>
        <td><%= user.ratings.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>