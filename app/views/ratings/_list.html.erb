<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Average</th>
    </tr>
  </thead>

  <tbody>
    <% rated.each do |rated| %>
      <tr>
        <td><%= link_to rated.name, rated %></td>
        <td><%= rated.average_rating.round(2) %></td>
      </tr>
    <% end %>
  </tbody>
</table>