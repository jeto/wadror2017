<p id="notice"><%= notice %></p>

<p>
  <h2>
  <%= @user.username %></h2>
</p>
<p>
  has made <%= pluralize(@user.ratings.count, 'rating') %>
</p>
<% if @user.favorite_beer or @user.favorite_style or @user.favorite_brewery %>
<p>Favorite</p>
  <% if @user.favorite_beer %>
    <p>beer: <%= @user.favorite_beer %></p>
  <% end %>
  <% if @user.favorite_style %>
    <p>style: <%= @user.favorite_style %></p>
  <% end %>
  <% if @user.favorite_brewery %>
    <p>brewery: <%= @user.favorite_brewery %></p>
  <% end %>
<% end %>

<% if !@user.beer_clubs.empty? %>
<p>member of 
  <% @user.beer_clubs.each do |club| %>
    <%= link_to club.name, club %>
  <% end %>
</p>
<%end%>

<h3>ratings</h3>
<ul>
  <% @user.ratings.each do |rating| %>
    <li> <%= rating %> 
      <% if @user == current_user %>
        <%= link_to 'delete', rating, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </li>
  <%end%>
</ul>

<% if @user == current_user %>
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>
<%= link_to 'Back', users_path %>
