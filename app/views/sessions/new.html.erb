<h1>Sign in</h1>

<div class="form-group">
<%= form_tag session_path do %>
  username <%= text_field_tag :username, params[:username], class:"form-control" %>
  password <%= password_field_tag :password, params[:password], class:"form-control" %>
  <br />
  <%= submit_tag "Log in", class:"btn btn-primary" %>
<% end %>

</div>

<%= link_to 'Sign in with GitHub', 'auth/github', class:"btn btn-primary" %>